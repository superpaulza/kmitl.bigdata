<script type="text/javascript">
var longWeekdays = ['Sun', 'Mon', 'Tues', 'Wed', 'Thurs', 'Fri', 'Sat'];
var longMonths = ['Jan.','Feb.','Mar.','Apr.','May','Jun.','Jul.','Aug.','Sept.','Oct.','Nov.','Dec.'];
function updateTime(){
        var currentDate = new Date();
    if(currentDate) {
    jQuery(".currentDay").html(longWeekdays[currentDate.getDay()]);
    jQuery(".currentMonth").html(longMonths[currentDate.getMonth()]);
    jQuery(".currentDayOfMonth").html(currentDate.getDate());
    var minutes = currentDate.getMinutes();
    var hours = currentDate.getHours();
    minutes = (minutes < 10 ? "0" + minutes : minutes);
    var suffix = "AM";
    if (hours >= 12) {
      suffix = "PM";
      hours = hours - 12;
    }
    if (hours == 0) {
      hours = 12;
    }
    
    jQuery(".currentTime").html(hours + ":" + minutes + suffix);
    
            var timeZone = 'ET';
    jQuery(".currentTimeZone").html(timeZone);
    jQuery(".time.element").fadeTo("slow", 1);

        
    t=setTimeout('updateTime()', (30 * 1000));
  }
}
</script>
<script type="text/javascript">jQuery(document).ready(updateTime);</script>
