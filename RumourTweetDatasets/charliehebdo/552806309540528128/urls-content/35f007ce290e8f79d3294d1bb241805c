<script type="text/javascript">
function submitnl()
{
var url = 'http://boc.lepoint.fr';
var url2 = 'http://www.lepoint.fr'
jQuery.post(url2+'/html/lepoint/clientnl.php?'+jQuery('#bloc_newsletter').serialize()+'&url='+url,
function(data) {
if(data["resultat"] == "ok" && data["raison"] ==
"precompte" )
{
document.location.href=url+"/campagne/inscription/origine/nlr/email/"+$("#nlmail").val();
}
else
{
jQuery('#messagenl').html(data['message']);
jQuery('#amessagenl').colorbox({open:true,inline:true, href:"#messagenl"});
}
},
'json');
return false;
//});
}
</script>
