<script>
jQuery(document).ready(function(){
jQuery('#voir_1913505, #masquer_1913505').click(function(){
var id=jQuery(this).attr('id');
if(id=='voir_1913505'){
var showDiv='#resultats_1913505',
hideDiv='#reponses_1913505';
}else{
var showDiv='#reponses_1913505',
hideDiv='#resultats_1913505';
}
jQuery(hideDiv).fadeOut(
'slow',
function(){
jQuery(showDiv).fadeIn('slow');
}
);
return false;
});
jQuery('#vote_1913505').click(function(){
var reponse=jQuery('#form_1913505').serialize();
reponse += reponse!=''?'&':'';
reponse += 'id=1913505&nb_votes=1' ;
jQuery.ajax({
url: '/sondages/ajax.php',
type: 'post',
data: reponse,
success: function(data) {
if(data!=0){
jQuery('#reponses_1913505 .action').hide();
window.location.reload();
}
return false;
}
});
return false;
});
});
</script>
