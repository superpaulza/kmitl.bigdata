function converturl() {
var emailfield = document.getElementsByName( "emailfield")[0];
var fullurl = document.getElementsByName( "fullurl")[0];
fullurl.value = "http://immobilier.lepoint.fr/alerte,step2.htm?mail="+ emailfield.value;
}
</script>
<form target="_top" name="emailsend" onsubmit='converturl();location.href=fullurl.value;return false'>
