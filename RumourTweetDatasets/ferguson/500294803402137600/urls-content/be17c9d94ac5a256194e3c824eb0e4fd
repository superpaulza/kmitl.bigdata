<script type="text/javascript">
window.tellAFriendEmbedCSS = "//dingo.care2.com/pictures/static/css/www/styles/tellafriend_embed/tellafriend_embed.1391732696.css";
    window.tellAFriendEmbedJS = "//dingo.care2.com/pictures/static/js/f_e/front_end/jslibs/tellafriend_embed/tellafriend_embed.1384812386.js";


    $(function() {

        CARE2.tellAFriendEmbed = function(params) {
            var _self = this;

            $.each(params, function(k,v) {
                _self[k] = v;
            });

            this.button.data("obj", this).click(function(e) {
                e.preventDefault();

                CARE2.tellAFriendEmbedInit = function() {
                    obj.bind();
                    delete CARE2.tellAFriendEmbedInit;
                }

                var obj = $(this).data("obj");

                if(window.tellAFriendEmbedCSS) {
                    $("head:first").append('<link rel="stylesheet" type="text/css" href="' + window.tellAFriendEmbedCSS + '" />');
                    window.tellAFriendEmbedCSS = false;
                }

                if(window.tellAFriendEmbedJS) {
                    var script = document.createElement( 'script' );
                    script.type = 'text/javascript';
                    script.src = window.tellAFriendEmbedJS;
                    $("head:first").append( script );
                    window.tellAFriendEmbedJS = false;
                } else {
                    obj.bind();
                }
            });
        }

        $(window).trigger("tellAFriendEmbed_SET");

    });
</script><script type="text/javascript">
        if (!window.care2_ua_footer_ts) {
            window.care2_ua_footer_ts = new Date().getTime() / 1000;
        
            }
</script>
