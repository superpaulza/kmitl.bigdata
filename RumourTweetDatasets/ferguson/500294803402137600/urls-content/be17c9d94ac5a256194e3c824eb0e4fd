<script>

    window.grabWidgetCSS = "//dingo.care2.com/pictures/static/css/www/styles/petitionsite/grab_widget/grab_widget.1403630653.css";
    window.grabWidgetJS = "//dingo.care2.com/pictures/static/js/www/js/petitionsite/grab_widget/grab_widget.1426615729.js";
    window.ZeroClipboardJS = "//dingo.care2.com/pictures/static/js/www/js/ZeroClipboard/ZeroClipboard.1377720672.js";

    window.loadgrabWidget = function(e) {

        window.grabWidgetIntvl = setInterval(function() {
            if(typeof CARE2.grabWidget != "undefined" && typeof ZeroClipboard != "undefined") {
                clearInterval(window.grabWidgetIntvl);

                CARE2.grabWidget.init("ul.care2_horiz_squares li.widget a","single","423349851");
            }
        }, 250);

        if(window.grabWidgetCSS) {
            $("head:first").append('<link rel="stylesheet" type="text/css" href="' + window.grabWidgetCSS + '" />');
            window.grabWidgetCSS = false;
        }

        if(window.grabWidgetJS) {
            var script = document.createElement( 'script' );
            script.type = 'text/javascript';
            script.src = window.grabWidgetJS;
            $("head:first").append( script );
            window.grabWidgetJS = false;
        }

        if(window.ZeroClipboardJS) {
            var script = document.createElement( 'script' );
            script.type = 'text/javascript';
            script.src = window.ZeroClipboardJS;
            $("head:first").append( script );
            window.ZeroClipboardJS = false;
        }

        return false;

    }

            $("ul.care2_horiz_squares li.widget a").one("click", window.loadgrabWidget);
    
</script>

