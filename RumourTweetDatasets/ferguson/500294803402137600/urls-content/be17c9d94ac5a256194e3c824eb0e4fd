<script>

    window.addressBookCSS = "//dingo.care2.com/pictures/static/css/www/styles/addressbook_popup/addressbook_popup.1373489117.css";
    window.addressBookJS = "//dingo.care2.com/pictures/static/js/f_e/front_end/jscript/addressbook/addressbook.1403630653.js";


    $(function() {

        CARE2.addressBook = function(actionLink,textbox,helpLink) {
            this.helpLink=helpLink||false;
            this.actionLink=actionLink;
            this.textbox=textbox;

            $(this.actionLink).one("click",{obj:this},function(e) {
                e.preventDefault();

                var obj = e.data.obj;

                CARE2.addressBookInit = function() {
                    obj.bind();
                    delete CARE2.addressBookInit;
                }

                if(!$("#addybook_box").length) {
                    $(document.body).append(
                        '<div id="addybook_box" class="care2_floater_container" style="display:none">' +
                            '<div id="addybook_title" class="floater_header branding_care2" style="cursor: move;"><span>Address Book</span></div>' +
                            '<div id="addybook_close_box" class="floater_closebox"></div>' +
                            '<div style="padding: 10px;" class="contain_floats">' +
                                '<div id="addressBook_loading" style="width: 300px; height: 200px; padding: 25px; text-align: center"><img src="http://dingo.care2.com/petitions/loading.gif" /> Loading...</div>' +
                                '<div id="addybook_contents"></div>' +
                            '</div>' +
                        '</div>'
                    );
                }

                if(window.addressBookCSS) {
                    $("head:first").append('<link rel="stylesheet" type="text/css" href="' + window.addressBookCSS + '" />');
                    window.addressBookCSS = false;
                }

                if(window.addressBookJS) {
                    var script = document.createElement( 'script' );
                    script.type = 'text/javascript';
                    script.src = window.addressBookJS;
                    $("head:first").append( script );
                    window.addressBookJS = false;
                } else {
                    obj.bind();
                }
            });
        }

    });

</script>



