<script>
if (desktopMode()) {
  requirejs(["jquery", "libs/swipe"], function($, Swipe) {
    var parselyTimeBottom, ptop_count = 0, pbottom_count = 0;
    
    function loadParselyBand(){
      ptop_count ++;
      if(ptop_count > 10){ clearInterval(parselyTime); }
      
      if($("#parsely-band .parsely-block").length > 0){
        clearInterval(parselyTime);
        window.parselyTopSwipe = new Swipe(document.getElementById('parsely-band'), {
          startSlide:1,
          speed:1000,
          continuous: true
        });
        $(".pagination-link-prev, .pagination-link-next").css("display","block");
        
        $(".horizontal-band .pagination-link-prev").on('click', function(e){parselyTopSwipe.prev();});
        $(".horizontal-band .pagination-link-next").on('click', function(e){parselyTopSwipe.next();});

        parselyTimeBottom = window.setInterval(loadParselyBandBottom, 1000);
      }
    }
    
    function loadParselyBandBottom(){
      pbottom_count ++;
      if(pbottom_count > 10){ clearInterval(parselyTimeBottom); }
      
      if($("#parsely-band-bottom .parsely-block").length > 0){
        clearInterval(parselyTimeBottom);
        
        window.parselyBottomSwipe = new Swipe(document.getElementById('parsely-band-bottom'), {
          startSlide: 1,
          speed:1000,
          continuous: true
        });
        $(".pagination-link-prev, .pagination-link-next").css("display","block");

        $(".horizontal-band-bottom .pagination-link-prev").on('click', function(e){parselyBottomSwipe.prev();});
        $(".horizontal-band-bottom .pagination-link-next").on('click', function(e){parselyBottomSwipe.next();});
      }
    }
    var parselyTime = window.setInterval(loadParselyBand, 1000);
  });
}
</script>

<!-- Target External Hyperlinks -->
<script>
requirejs(["jquery"], function($) {
  $(document).ready(function() {
    $('a').each(function() {
       var a = new RegExp('/' + window.location.host + '/');
       if(!a.test(this.href)) {
           $(this).click(function(event) {
               event.preventDefault();
               event.stopPropagation();
               window.open(this.href, '_blank');
           });
       }
    });

  });
});
</script>
<!-- ./Target External Hyperlinks -->

