    <script>
    requirejs(["jquery", "config"], function($, config) {
      $(function() {
         try {
           var hideDropCap = false;

           if(!hideDropCap){
               var regex = /[^a-zA-Z0-9]/,
                regex2 = /(>)([a-zA-Z0-9])/,
                $p = $(".article-page div.body div.text:first p:first"),
                textString = $p.html(),
                firstLetter = (!regex.test(textString[0])) ? textString[0] : regex2.exec(textString)[2],
                marginalDropCap = '<span class="dropcap dropcap-accent-culture">' + firstLetter + '</span>',
                cpn = 0;

               if ((!regex.test($p.text()[0])) && (cpn < 2)) {
                 $p.html(textString.replace(firstLetter, marginalDropCap));
               }
            }

           //TODO:: plugin
           $('blockquote').addClass('quote-accent-culture').wrapInner('<div class="buffer"></div>').prepend('<div class="blockquote-blockquote-start"></div>').append('<div class="blockquote-blockquote-end"></div>');
         } catch (error) {
           config.log(error);
         }
      });
    });
    </script>


